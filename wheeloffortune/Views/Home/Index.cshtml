        function getShiftData(url, startdate) {
            $.ajax({
                url: url,
                type: "get",
                data: "date="+startdate, //$("form").serialize(), 
                success: function (result) {
                    $("#shifts-partial").html(result);
                }
            });
        }
    });
</script>
